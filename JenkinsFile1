// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
            agent any
            steps {
                sh 'mvn install'
            }
        }
        stage('Test on Linux') {
            agent {
                label 'label'
            }
            steps {
                sh 'mvn test'
            }
        }
        stage('Test on Windows') {
            agent {
                label 'windows'
            steps {
                sh 'mvn run build'
            }
        }
    }
}

