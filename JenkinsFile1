// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
            parallel {
               stage('test') {
               agent {
                       label "linux"
                    }
        }
        stage('Test on Docker') {
            agent {
                label 'Docker'
            }
            steps {
                echo 'test'
            }
        }
        stage('Test on Windows') {
            agent {
                label 'windows'
            steps {
                echo 'run build'
            }
        }
    }
}

